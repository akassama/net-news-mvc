@model IEnumerable<GambiaReview.Models.CategoriesModel>

@{
    ViewBag.Title = "Categories";
}

<section class="ptb-0">
    <div class="mb-30 brdr-ash-1 opacty-5"></div>
    <div class="container">
        <a class="mt-10" href="~/"><i class="fas fa-home mlr-5"></i>Home<i class="fas fa-angle-right mlr-10"></i></a>
        <a class="mt-10 color-ash" href="">Categories</a>
    </div><!-- container -->
</section>


<section>
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-lg-8">

                <h3 class="p-title"><b>Categories</b></h3>
                <div class="row">
                    @foreach (var item in Model)
                    {


                        <div class="col-md-4 spacer">
                            <div class="card padded zoom">
                                <a href="~/@item.CategoryName">
                                    <img class="card-img-top" src="~/images/categories/@item.ImageFile" alt="@item.CategoryText">
                                    <div class="card-body">
                                        @if (item.CategoryText.Length <= 12)
                                        {
                                            <h3 class="card-text color-black">@item.CategoryText</h3>
                                        }
                                        else
                                        {
                                            <h4 class="card-text color-black">@item.CategoryText</h4>
                                        }
                                    </div>
                                </a>
                            </div>
                        </div>

                    }

                </div><!-- row -->
            </div><!-- col-md-9 -->

            <div class="d-none d-md-block d-lg-none col-md-3"></div>
            <div class="col-md-6 col-lg-4">
                <div class="pl-20 pl-md-0">
                    @AppHelpers.GetRandomYoutubeVideo()

                    <div class="mtb-50">
                        <h4 class="p-title"><b>POPULAR POSTS</b></h4>
                        @AppHelpers.GetRecentPopularPost(4)

                    </div><!-- mtb-50 -->

                    <div class="mtb-50 pos-relative">
                        @AppHelpers.GetRandomAdGif()
                    </div><!-- mtb-50 -->

                    <div class="mtb-50 mb-md-0">
                        @using (Html.BeginForm("Subscribe", "Home", FormMethod.Post, new { @class = "nwsltr-primary-1" }))
                        {

                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true)

                            @Html.Partial("~/Views/Alerts/_SubscribtionAlerts.cshtml")

                            @AppHelpers.GetSubscriptionForm()

                        }
                    </div><!-- mtb-50 -->

                </div><!--  pl-20 -->
            </div><!-- col-md-3 -->

        </div><!-- row -->

    </div><!-- container -->
</section>
