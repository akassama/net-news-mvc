@model IEnumerable<GambiaReview.Models.AccountsModel>
@{
    ViewBag.Title = "Manage Users";
}

<!-- Topbar -->
@{
    Html.RenderPartial("~/Views/Admin/_AdminNav.cshtml");
    int row_count = 0;
}
<!-- End of Topbar -->

<!-- Breadcrumb -->
<div class="light-font">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb primary-color">
            <li class="breadcrumb-item"><a class="white-text" href="~/Admin/">Dashboard</a></li>
            <li class="breadcrumb-item active">Manage Users</li>
        </ol>
    </nav>
</div>


<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Manage Users</h1>

    <!--//Action Messages-->
    @Html.Partial("~/Views/Alerts/_AdminActionAlerts.cshtml")


    <p>
        @Html.ActionLink("New User", "NewUser")
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Manage User Accounts</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Country)
                            </th> 
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Oauth)
                            </th>
                            <th class="text-center">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Country)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Oauth)
                            </th>
                            <th class="text-center">
                                Action
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            row_count = row_count + 1;
                            <tr>
                                <td>
                                    @row_count
                                </td>
                                <td>
                                    <span>@item.FirstName @item.LastName</span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country)
                                </td>
                                <td>
                                    <span>(@item.CountryCode) @item.PhoneNumber</span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @{
                                        var status = "Active";
                                        var text_style = "success";
                                        if (item.Status == 0)
                                        {
                                            status = "Pending";
                                            text_style = "danger";
                                        }
                                        <span class="text-@text_style font-weight-bold">@status</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var account_type = "Account";
                                        if (item.Oauth == 1)
                                        {
                                            account_type = "Facebook";
                                        }
                                        <span class="text-info font-weight-bold">@account_type</span>
                                    }
                                </td>
                                <td>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <a href="@Url.Action("ArticleDetails", "Admin", new { id = item.ID })" class="btn btn-success min-width-75">
                                                Details
                                                <br />
                                                <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
