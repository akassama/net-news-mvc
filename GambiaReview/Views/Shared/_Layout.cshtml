                                    {
                                        <div class="alert alert-danger alert-dismissable">
                                            <strong>@TempData["ProcessLoginFailureMessage"]</strong>
                                            <div class="spacer-small"></div>
                                            <p>Send us a message here <a href='~/Home/Contact'>contact</a></p>
                                        </div>
                                    }
                                </div>
                            </div>

