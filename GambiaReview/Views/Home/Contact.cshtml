@model GambiaReview.Models.ContactMessageModel

@{
    ViewBag.Title = "Contact Us";
}

<section class="ptb-0">
    <div class="mb-30 brdr-ash-1 opacty-5"></div>
    <div class="container">
        <a class="mt-10" href="~/"><i class="fas fa-home mlr-5"></i>Home<i class="fas fa-angle-right mlr-10"></i></a>
        <a class="mt-10 color-ash" href="">Contact us</a>
    </div><!-- container -->
</section>

<!--//Action Messages-->
@Html.Partial("~/Views/Alerts/_AdminActionAlerts.cshtml")

<section>
    <div class="container">
        <div class="row">

            <div class="col-sm-12 col-md-8">
                <h3><b>SEND US A MESSAGE</b></h3>
                <p class="mb-30 mr-100 mr-sm-0">
                    We’d love to hear from you – please get in touch for comments, requests,
                    advertising partnerships or job inquiries.
                </p>
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-block form-bold form-mb-20 form-h-35 form-brdr-b-grey pr-50 pr-sm-0" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">

            <div class="col-sm-6">
                <p class="color-ash">Full Name*</p>
                <div class="pos-relative">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "pr-20" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    @*<input class="pr-20" type="text">*@
                    <i class="dplay-none abs-tbr lh-35 font-13 color-green ion-android-done"></i>
                </div><!-- pos-relative -->
            </div><!-- col-sm-6 -->

            <div class="col-sm-6">
                <p class="color-ash">Email*</p>
                <div class="pos-relative">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "pr-20" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    @*<input class="pr-20" type="email">*@
                    <i class="dplay-none abs-tbr lh-35 font-13 color-green ion-android-done"></i>
                </div><!-- pos-relative -->
            </div><!-- col-sm-6 -->

            <div class="col-sm-6">
                <p class="color-ash">Your Phone*</p>
                <div class="pos-relative">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "pr-20" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    @*<input class="pr-20" type="text">*@
                    <i class="dplay-none abs-tbr lh-35 font-13 color-green ion-android-done"></i>
                </div><!-- pos-relative -->
            </div><!-- col-sm-6 -->

            <div class="col-sm-6">
                <p class="color-ash">Subject*</p>
                <div class="pos-relative">
                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "pr-20" } })
                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                    @*<input class="pr-20" type="text">*@
                    <i class="dplay-none abs-tbr lh-35 font-13 color-green ion-android-done"></i>
                </div><!-- pos-relative -->
            </div><!-- col-sm-6 -->

            <div class="col-sm-12">
                <div class="pos-relative pr-80">
                    <p class="color-ash">Message*</p>
                    <h4><b>Tell us about your question</b></h4>
                    @Html.TextAreaFor(model => model.Message, new { @class = "mb-0", @rows = "3" })
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    @*<textarea class="mb-0"></textarea>*@
                    <button class="abs-br font-20 plr-15 btn-fill-primary" type="submit"><i class="fas fa-paper-plane"></i></button>
                </div><!-- pos-relative -->
            </div><!-- col-sm-6 -->

        </div><!-- row -->

            }
            </div><!-- col-md-6 -->

            <div class="col-sm-12 col-md-4">
                <h3 class="mb-20 mt-sm-50"><b>INFORMATION</b></h3>

                <ul class="font-11 list-relative list-li-pl-30 list-block list-li-mb-15">
                    <li><i class="fas fa-map-marker-alt abs-tl"></i>599 Co Rd 771 Ohio City CO <br />81237. United States</li>
                    <li><i class="fas fa-envelope abs-tl"></i>gambiareview@gmail.com</li>
                    <li><i class="fas fa-phone abs-tl"></i>(+90)-531-4950-226</li>
                </ul>
                <ul class="font-11  list-a-plr-10 list-a-plr-sm-5 list-a-ptb-15 list-a-ptb-sm-5">
                    <li><a class="pl-0" href="#"><i class="ion-social-linkedin"></i></a></li>
                    <li><a href="#"><i class="fab fa-facebook"></i></a></li>
                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fab fa-google"></i></a></li>
                    <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                </ul>

            </div><!-- col-md-6 -->
        </div><!-- row -->
    </div><!-- container -->
</section>