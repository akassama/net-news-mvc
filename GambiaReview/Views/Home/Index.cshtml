                                <h4 class="p-title"><b>POPULAR POSTS</b></h4>
                                @AppHelpers.GetRecentPopularPost(4)

                            </div><!-- mtb-50 -->

                            <div class="mtb-50 pos-relative">
                                @*<img src="~/images/banner-1-600x450.jpg" alt="">
