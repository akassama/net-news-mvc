                                        @*@AppHelpers.FormatLongText(stripped_body.ToString(), 150)*@
                                        <br />
                                    </p>
                                </a>
                            </div><!-- col-sm-6 -->

                            <div class="col-sm-6">
                                @AppHelpers.GetRecentNewsArticles(4)
