@{
    if (ViewBag.ShowData)
    {
        <section>
            <div class="container">

                <div class="row">

                    <div class="col-md-12 col-lg-8">
                        <h4 class="p-title"><b>RECENT NEWS</b></h4>
                        <div class="row">

                            <div class="col-sm-6 zoom-xm max-img-15">
                                <a href="~/@AppHelpers.GetArticleCategory(Int32.Parse(ViewBag.HeadLine1ID))/News/@AppHelpers.ReturnArticleData(Int32.Parse(ViewBag.HeadLine1ID), "ArticleTextIdentifier").ToString()">
                                    <img src="~/images/articles/@AppHelpers.GetArticleCategory(Int32.Parse(ViewBag.HeadLine1ID)).ToString()/@AppHelpers.ReturnArticleData(Int32.Parse(ViewBag.HeadLine1ID), "ArticleHeadlineImage").ToString()" alt="@AppHelpers.ReturnArticleData(Int32.Parse(ViewBag.HeadLine1ID), "HeadlineImageDescription").ToString()">
