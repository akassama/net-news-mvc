                                                <a class="mt-15 color-primary link-brdr-btm-primary" href="#"><b>Download for free</b></a>
                                            </div><!-- dplay-tbl-cell -->
                                        </div><!-- dplay-tbl -->
                                    </div><!-- abs-tblr -->*@
                                @AppHelpers.GetRandomAdGif()
